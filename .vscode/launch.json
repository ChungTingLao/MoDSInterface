    "version": "0.2.0",
    "configurations": [
        {
            "name": "MoDS-MOO example",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/examples/moo.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/mods_mock_agent/api/",
                    "remoteRoot": "/app/"
                }
            ]
        }
    ]
}